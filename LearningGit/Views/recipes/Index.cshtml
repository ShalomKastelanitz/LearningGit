@model IEnumerable<LearningGit.Models.Recipes>

<div class="recipes-container">
    @foreach (var recipe in Model)
    {
        <div class="recipe-card">
            <details>
                <summary>@recipe.Name</summary>
                <p><strong>Description:</strong> @recipe.Description</p>
                <p><strong>Preparation Time:</strong> @recipe.PreparationTime minutes</p>

                @if (recipe.ProductList != null && recipe.ProductList.Any())
                {
                    <p><strong>Product List:</strong></p>
                    <ul>
                        @foreach (var product in recipe.ProductList)
                        {
                            <li>@product</li>
                        }
                    </ul>
                }

                @if (recipe.StepsToPerform != null && recipe.StepsToPerform.Any())
                {
                    <p><strong>Steps to Perform:</strong></p>
                    <ol>
                        @foreach (var step in recipe.StepsToPerform)
                        {
                            <li>@step</li>
                        }
                    </ol>
                }
            </details>
        </div>
    }
</div>

<style>
    .recipes-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .recipe-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        width: 300px;
    }

    details summary {
        font-weight: bold;
        cursor: pointer;
    }
</style>
